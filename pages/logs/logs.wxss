.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.page-header {
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.log-item {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.log-date {
  font-size: 32rpx;
  color: #666;
}

.empty-notice {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 32rpx;
}