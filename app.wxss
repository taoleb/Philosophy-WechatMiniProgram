/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 导航栏样式 */
.navbar {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 卡片样式 */
.card {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
  background-color: #333;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

/* 次要标题 */
.subtitle {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
  color: #444;
}

/* 段落样式 */
.text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #666;
}

/* 引用块样式 */
.quote {
  padding: 20rpx 30rpx;
  border-left: 8rpx solid #888;
  background-color: #f8f8f8;
  margin: 20rpx 0;
  color: #555;
  font-style: italic;
}